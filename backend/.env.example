# Environment
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/aso_store_dev?schema=public"

# JWT
JWT_SECRET="your-development-jwt-secret"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_SECRET="your-development-refresh-secret"
JWT_REFRESH_EXPIRES_IN="30d"
JWT_ACCESS_SECRET="your-jwt-access-secret-here"
JWT_ANONYMOUS_SECRET="your-jwt-anonymous-secret-here"

# CORS
CORS_ORIGIN="http://localhost:3000"

# File uploads
UPLOAD_DIR="../uploads"
MAX_FILE_SIZE=52428800

# SMS Provider
SMS_PROVIDER="mock"
SMS_PROVIDER_API_KEY=""
SMS_PROVIDER_URL=""